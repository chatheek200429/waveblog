<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center">Admin Dashboard</h1>
    <div class="text-right mb-3">
      <a href="/admin/add" class="btn btn-primary">Add New Post</a>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Image</th>
          <th>Header</th>
          <th>Sub Heading</th>
          <th>Date</th>
          <th>Time</th>
          <th>Author</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% posts.forEach(post => { %>
        <tr>
          <td><img src="<%= post.image %>" alt="<%= post.header %>" style="width: 100px;"></td>
          <td><%= post.header %></td>
          <td><%= post.subHeading %></td>
          <td><%= post.date %></td>
          <td><%= post.time %></td>
          <td><%= post.author %></td>
          <td>
            <a href="/admin/edit/<%= post._id %>" class="btn btn-warning btn-sm">Edit</a>
            <form action="/admin/delete/<%= post._id %>" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
